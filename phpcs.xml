<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="DashMed Standard" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>The coding standard for DashMed.</description>

    <file>app</file>
    <file>assets/includes</file>
    <file>public</file>
    <file>tests</file>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>

    <!-- Use PSR-12 as a base -->
    <rule ref="PSR12"/>

    <!-- Allow side effects in index.php (for routing) -->
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>public/index.php</exclude-pattern>
    </rule>
</ruleset>
